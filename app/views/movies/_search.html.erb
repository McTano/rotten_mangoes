<h3>Search</h3>
  <%= form_tag(movies_path, method: "get") do %>
<div> 
  <%= label_tag(:title) %><br>
  <%= text_field_tag(:title) %>
</div>
<div>
  <%= label_tag(:director) %><br>
  <%= text_field_tag (:director) %>
</div>
<div>
<%= label_tag(:runtime_in_minutes, "Runtime") %><br>
<%= select_tag(:runtime_in_minutes, options_for_select([ 
  nil,
  "Under 90 minutes",
  "Between 90 and 120 minutes",
  "Over 120 minutes"
  ])) %>
</div>
<div>
<%= submit_tag "Search" %>
</div>
<% end %>
